<div class="container page_border">
    <div class="page_image animated bounce">
    </div>
    <div class="page_content">
        <div class="list_container">
            <table class="table table-condensed">
                <thead>
                  <tr>
                    <th>Number</th>                    
                    <th>Title</th>
                    <th>Email</th>
                    <th>Time</th>
                  </tr>
                </thead>
                <tbody>
                    <% @mail_list.each do |mail| %>                                                       
                        <tr>                         
                            <td class="col-xs-1"><%= mail.id %></td>
                            <td class="col-xs-5"><a href="/detail/<%=mail.id%>"><%= mail.title %></a></td>
                            <td class="col-xs-3"><%= mail.email %></td>
                            <td class="col-xs-3"><%= mail.created_at.in_time_zone("Seoul").strftime("%Y.%m.%d %H:%M") %></td>                        
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        <a href="/write" class="submit_button hvr-buzz-out">이메일 작성</a>
    </div>
</div>


